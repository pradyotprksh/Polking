<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".verifyOTP.VerifyOTPActivity">

    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:srcCompat="@drawable/ic_faqs_bg"
            android:id="@+id/imageView4"
            app:layout_constraintTop_toTopOf="parent"
            android:contentDescription="@string/imagedescription"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:ignore="VectorDrawableCompat"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintVertical_bias="0.0" android:scaleType="fitXY"/>

    <TextView
            android:text="@android:string/cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/error_background"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textSize="15sp"
            android:layout_marginBottom="20dp"
            android:paddingLeft="70dp"
            android:paddingTop="7dp"
            android:paddingRight="70dp"
            android:paddingBottom="7dp"
            app:fontFamily="@font/muli_bold"
            android:textColor="@color/white"
            android:id="@+id/cancleTv"/>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/shadow_background"
            android:elevation="3dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        <TextView
                android:id="@+id/textView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:text="@string/verify_phone_number"
                android:textColor="@color/black"
                android:textSize="25sp"
                app:fontFamily="@font/muli"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/edittext_bg"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView">

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginBottom="5dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/backSpaceTv"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="1.0">

                <EditText
                        android:id="@+id/otp1Tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@color/white"
                        android:clickable="false"
                        android:focusable="false"
                        android:fontFamily="@font/muli_semi_bold"
                        android:hint="@string/otp_hint"
                        android:inputType="phone"
                        android:padding="8dp"
                        android:textSize="12sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/otp2Tv"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:ignore="Autofill" />

                <EditText
                        android:id="@+id/otp2Tv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@color/white"
                        android:clickable="false"
                        android:focusable="false"
                        android:fontFamily="@font/muli_semi_bold"
                        android:hint="@string/otp_hint"
                        android:inputType="phone"
                        android:padding="8dp"
                        android:textSize="12sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/otp3Tv"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:ignore="Autofill" />

                <EditText
                        android:id="@+id/otp3Tv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@color/white"
                        android:clickable="false"
                        android:focusable="false"
                        android:fontFamily="@font/muli_semi_bold"
                        android:hint="@string/otp_hint"
                        android:inputType="phone"
                        android:padding="8dp"
                        android:textSize="12sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/otp4Tv"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:ignore="Autofill" />

                <EditText
                        android:id="@+id/otp4Tv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@color/white"
                        android:clickable="false"
                        android:focusable="false"
                        android:fontFamily="@font/muli_semi_bold"
                        android:hint="@string/otp_hint"
                        android:inputType="phone"
                        android:padding="8dp"
                        android:textSize="12sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/otp5Tv"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:ignore="Autofill" />

                <EditText
                        android:id="@+id/otp5Tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@color/white"
                        android:clickable="false"
                        android:focusable="false"
                        android:fontFamily="@font/muli_semi_bold"
                        android:hint="@string/otp_hint"
                        android:inputType="phone"
                        android:padding="8dp"
                        android:textSize="12sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/otp6Tv"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:ignore="Autofill" />

                <EditText
                        android:id="@+id/otp6Tv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@color/white"
                        android:clickable="false"
                        android:focusable="false"
                        android:fontFamily="@font/muli_semi_bold"
                        android:hint="@string/otp_hint"
                        android:inputType="phone"
                        android:padding="8dp"
                        android:textSize="12sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:ignore="Autofill" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                    android:id="@+id/backSpaceTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="10dp"
                    android:text="@string/backspace"
                    android:textColor="@color/colorPrimary"
                    android:textSize="12sp"
                    app:fontFamily="@font/muli_bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TableLayout
                android:id="@+id/tableLayout3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="30dp"
                android:layout_marginRight="30dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/constraintLayout">

            <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:weightSum="5"
                    tools:ignore="UselessParent">

                <ImageView
                        android:id="@+id/zeroDial"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:contentDescription="@string/imagedescription"
                        app:srcCompat="@drawable/zero_dial"
                        tools:ignore="VectorDrawableCompat" />

                <ImageView
                        android:id="@+id/oneDial"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:contentDescription="@string/imagedescription"
                        app:srcCompat="@drawable/one_dial"
                        tools:ignore="VectorDrawableCompat" />

                <ImageView
                        android:id="@+id/twoDial"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:contentDescription="@string/imagedescription"
                        app:srcCompat="@drawable/two_dial"
                        tools:ignore="VectorDrawableCompat" />

                <ImageView
                        android:id="@+id/threeDial"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:contentDescription="@string/imagedescription"
                        app:srcCompat="@drawable/three_dial"
                        tools:ignore="VectorDrawableCompat" />

                <ImageView
                        android:id="@+id/fourDial"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:contentDescription="@string/imagedescription"
                        app:srcCompat="@drawable/four_dial"
                        tools:ignore="VectorDrawableCompat" />

            </TableRow>

        </TableLayout>

        <TableLayout
                android:id="@+id/tableLayout4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="30dp"
                android:layout_marginRight="30dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tableLayout3">

            <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="5"
                    tools:ignore="UselessParent">

                <ImageView
                        android:id="@+id/fiveDial"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:contentDescription="@string/imagedescription"
                        app:srcCompat="@drawable/five_dial"
                        tools:ignore="VectorDrawableCompat" />

                <ImageView
                        android:id="@+id/sixDial"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:contentDescription="@string/imagedescription"
                        app:srcCompat="@drawable/six_dial"
                        tools:ignore="VectorDrawableCompat" />

                <ImageView
                        android:id="@+id/sevenDial"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:contentDescription="@string/imagedescription"
                        app:srcCompat="@drawable/seven_dial"
                        tools:ignore="VectorDrawableCompat" />

                <ImageView
                        android:id="@+id/eightDial"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:contentDescription="@string/imagedescription"
                        app:srcCompat="@drawable/eight_dial"
                        tools:ignore="VectorDrawableCompat" />

                <ImageView
                        android:id="@+id/nineDial"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:contentDescription="@string/imagedescription"
                        app:srcCompat="@drawable/nine_dial"
                        tools:ignore="VectorDrawableCompat" />

            </TableRow>

        </TableLayout>

        <TextView
                android:id="@+id/saveTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/appcolor_background"
                android:paddingLeft="70dp"
                android:paddingTop="7dp"
                android:paddingRight="70dp"
                android:paddingBottom="7dp"
                android:text="@string/continue_txt"
                android:textColor="@color/white"
                android:textSize="15sp"
                app:fontFamily="@font/muli_bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tableLayout4" />

        <ProgressBar
                android:id="@+id/progressBar2"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>