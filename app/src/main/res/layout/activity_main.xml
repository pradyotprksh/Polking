<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".home.MainActivity">

    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:srcCompat="@drawable/background_image"
            android:contentDescription="@string/imagedescription"
            android:id="@+id/imageView"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:scaleType="fitXY"
            tools:ignore="VectorDrawableCompat"/>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

        <androidx.coordinatorlayout.widget.CoordinatorLayout
                android:fitsSystemWindows="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

            <com.google.android.material.appbar.AppBarLayout
                    android:background="@android:color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/appBarLayout"
                    android:fitsSystemWindows="true"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                <com.google.android.material.appbar.CollapsingToolbarLayout
                        android:background="@android:color/transparent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:expandedTitleTextAppearance="@android:color/transparent"
                        android:fitsSystemWindows="true"
                        app:contentScrim="?attr/colorPrimary"
                        app:layout_scrollFlags="enterAlways">

                    <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_collapseMode="parallax"
                            android:paddingTop="30dp"
                            android:paddingBottom="20dp">

                        <TextView
                                android:text="@string/home"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/back_tv"
                                app:fontFamily="@font/muli_bold"
                                android:textSize="18sp"
                                android:textColor="@android:color/white"
                                app:layout_constraintTop_toTopOf="parent"
                                android:layout_marginStart="20dp"
                                app:layout_constraintStart_toStartOf="parent"
                                android:layout_marginLeft="20dp" android:visibility="gone"/>

                        <TextView
                                android:text="@string/welcome_home"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/welcome_tv"
                                android:textSize="12sp"
                                android:textColor="@android:color/white"
                                app:fontFamily="@font/muli_light"
                                android:layout_marginTop="15dp"
                                app:layout_constraintTop_toBottomOf="@+id/back_tv"
                                android:layout_marginStart="20dp"
                                app:layout_constraintStart_toStartOf="parent"
                                android:layout_marginLeft="20dp"/>

                        <EditText
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:inputType="textMultiLine"
                                android:ems="10"
                                android:background="@drawable/white_round_borders"
                                android:elevation="3dp"
                                android:id="@+id/addQuestion_et"
                                android:layout_marginStart="20dp"
                                app:layout_constraintStart_toStartOf="parent"
                                android:layout_marginLeft="20dp"
                                android:paddingLeft="15dp"
                                android:paddingTop="10dp"
                                android:focusable="auto"
                                android:paddingRight="15dp"
                                android:paddingBottom="10dp"
                                android:hint="@string/enter_your_question"
                                android:textSize="12sp"
                                android:fontFamily="@font/muli_light"
                                android:textColor="@color/black"
                                android:layout_marginTop="30dp"
                                app:layout_constraintTop_toBottomOf="@+id/welcome_tv" android:layout_marginEnd="20dp"
                                app:layout_constraintEnd_toStartOf="@+id/post_Tv" android:layout_marginRight="20dp"/>

                        <com.google.android.material.chip.Chip
                                android:text="@string/post"
                                android:layout_marginRight="20dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/post_Tv"
                                android:textColor="@color/white"
                                android:textSize="16sp"
                                android:textAlignment="center"
                                android:theme="@style/Theme.MaterialComponents.Light"
                                android:fontFamily="@font/muli_bold"
                                app:chipBackgroundColor="@color/colorPrimaryDark"
                                app:layout_constraintEnd_toEndOf="parent"
                                android:visibility="gone"
                                android:layout_marginEnd="20dp"
                                app:layout_constraintBottom_toBottomOf="@+id/addQuestion_et"
                                app:layout_constraintTop_toTopOf="@+id/addQuestion_et"
                                app:rippleColor="@color/colorPrimary" />

                        <androidx.recyclerview.widget.RecyclerView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/addQuestion_et"
                                app:layout_constraintBottom_toBottomOf="parent"
                                android:layout_marginLeft="20dp"
                                android:layout_marginStart="20dp"
                                android:layout_marginRight="20dp"
                                android:layout_marginEnd="20dp"
                                android:id="@+id/bestFrndQuestion_rv"
                                android:visibility="visible" android:layout_marginTop="10dp"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </com.google.android.material.appbar.CollapsingToolbarLayout>

            </com.google.android.material.appbar.AppBarLayout>

            <androidx.core.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none"
                    app:layout_behavior="@string/appbar_scrolling_view_behavior">

                <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <TextView
                            android:text="@string/recent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/recent_tv"
                            android:textColor="@color/black"
                            android:textSize="26sp"
                            android:fontFamily="@font/muli_bold"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginLeft="20dp"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="20dp" app:layout_constraintTop_toTopOf="parent"/>

                    <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recentQ_rv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="30dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/recent_tv" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.core.widget.NestedScrollView>

        </androidx.coordinatorlayout.widget.CoordinatorLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/imageProgressBar"
            app:layout_constraintBottom_toBottomOf="@+id/user_iv"
            app:layout_constraintEnd_toEndOf="@+id/user_iv"
            app:layout_constraintStart_toStartOf="@+id/user_iv"
            app:layout_constraintTop_toTopOf="@+id/user_iv"
            android:indeterminate="true"
            android:visibility="gone"/>

    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:ems="10"
            android:background="@drawable/app_color_round_borders"
            android:elevation="3dp"
            android:id="@+id/addQuestion_et2"
            android:paddingLeft="15dp"
            android:paddingTop="10dp"
            android:paddingRight="15dp"
            android:paddingBottom="10dp"
            android:hint="@string/enter_your_question"
            android:textSize="12sp"
            android:fontFamily="@font/muli_light"
            android:textColor="@color/black"
            android:visibility="gone"
            android:layout_marginStart="20dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="20dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="20dp"
            android:layout_marginEnd="20dp" app:layout_constraintEnd_toStartOf="@+id/post_Tv2"
            android:layout_marginRight="20dp"/>
    <TextView
            android:text="@string/post"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/post_Tv2"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:elevation="3dp"
            android:fontFamily="@font/muli_bold"
            android:background="@drawable/appcolor_background"
            android:visibility="gone"
            android:paddingLeft="20dp"
            android:paddingTop="5dp" android:paddingRight="20dp"
            android:paddingBottom="5dp"
            app:layout_constraintBottom_toBottomOf="@+id/addQuestion_et2"
            app:layout_constraintTop_toTopOf="@+id/addQuestion_et2" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="20dp" android:layout_marginEnd="20dp"/>

    <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.chip.Chip
            android:id="@+id/reloadQuestions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="@string/something_new"
            android:textColor="@color/black"
            android:theme="@style/Theme.MaterialComponents.Light"
            android:visibility="gone"
            app:chipBackgroundColor="@color/light_blue"
            app:chipIcon="@drawable/ic_refresh"
            app:chipStrokeColor="@color/colorAccent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:rippleColor="@color/agree_color" />

    <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:contentDescription="@string/imagedescription"
            android:src="@drawable/ic_default_pic"
            android:id="@+id/user_iv"
            android:scaleType="centerCrop"
            android:layout_marginTop="35dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            tools:ignore="VectorDrawableCompat"/>

</androidx.constraintlayout.widget.ConstraintLayout>