<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".profile.faq.FAQsActivity">

    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/ic_faqs_bg"
            android:id="@+id/background_image"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.0"
            android:contentDescription="@string/imagedescription"
            android:scaleType="fitXY"/>

    <TextView
            android:id="@+id/back_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:fontFamily="@font/muli"
            android:text="@string/back"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/search_et"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/search_et" />

    <androidx.appcompat.widget.SearchView
            android:id="@+id/search_et"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:focusable="auto"
            android:fontFamily="@font/muli_extra_light"
            android:hint="@string/search_here"
            android:inputType="text"
            android:textColor="@color/black"
            android:textSize="10sp"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/back_tv"
            app:layout_constraintTop_toTopOf="parent" />

    <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            android:id="@+id/nestedScrollView"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/search_et">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:text="@string/top_questions"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/muli_bold"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:layout_marginStart="20dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="20dp"
                    android:id="@+id/topQues_tv"
                    android:layout_marginEnd="20dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginRight="20dp"
                    android:textAllCaps="true"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="15dp"/>

            <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    app:layout_constraintTop_toBottomOf="@+id/topQues_tv"
                    app:layout_constraintStart_toStartOf="parent"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:clipToPadding="false"
                    android:id="@+id/topQues_rv"/>

            <View
                    android:layout_width="50dp"
                    android:layout_height="100dp"
                    android:background="@drawable/one_side_round"
                    android:layout_marginTop="30dp"
                    app:layout_constraintTop_toBottomOf="@+id/topQues_rv"
                    app:layout_constraintStart_toStartOf="parent"
                    android:id="@+id/ques_view"/>

            <TextView
                    android:text="@string/questions_and_response"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textAllCaps="true"
                    android:fontFamily="@font/muli_bold"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:layout_marginStart="20dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="20dp"
                    android:id="@+id/ques_tv"
                    android:layout_marginEnd="20dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginRight="20dp"
                    app:layout_constraintTop_toTopOf="@+id/ques_view"
                    app:layout_constraintBottom_toBottomOf="@+id/ques_view"/>

            <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/ques_tv"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="15dp"
                    android:clipToPadding="false"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:id="@+id/questionRes_rv"/>

            <View
                    android:layout_width="50dp"
                    android:layout_height="100dp"
                    android:background="@drawable/one_side_round"
                    android:layout_marginTop="30dp"
                    app:layout_constraintTop_toBottomOf="@+id/questionRes_rv"
                    app:layout_constraintStart_toStartOf="parent"
                    android:id="@+id/frnd_view"/>

            <TextView
                    android:text="@string/friends_and_best_friends"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textAllCaps="true"
                    android:fontFamily="@font/muli_bold"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:layout_marginStart="20dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="20dp"
                    android:id="@+id/friends_tv"
                    android:layout_marginEnd="20dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginRight="20dp"
                    app:layout_constraintTop_toTopOf="@+id/frnd_view"
                    app:layout_constraintBottom_toBottomOf="@+id/frnd_view"
                    android:layout_marginBottom="8dp"/>

            <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/friends_tv"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="15dp"
                    android:clipToPadding="false"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:id="@+id/frnBest_rv"/>

            <View
                    android:layout_width="50dp"
                    android:layout_height="100dp"
                    android:background="@drawable/one_side_round"
                    android:layout_marginTop="30dp"
                    app:layout_constraintTop_toBottomOf="@+id/frnBest_rv"
                    app:layout_constraintStart_toStartOf="parent"
                    android:id="@+id/block_view"/>

            <TextView
                    android:text="@string/block_and_report"
                    android:layout_width="0dp"
                    android:textAllCaps="true"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/muli_bold"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:layout_marginStart="20dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="20dp"
                    android:id="@+id/block_tv"
                    android:layout_marginEnd="20dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginRight="20dp"
                    app:layout_constraintTop_toTopOf="@+id/block_view"
                    app:layout_constraintBottom_toBottomOf="@+id/block_view"
                    android:layout_marginBottom="8dp"/>

            <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/block_tv"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:clipToPadding="false"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:id="@+id/blockRpt_rv"
                    android:orientation="horizontal"
                    android:layout_marginTop="15dp"/>

            <TextView
                    android:text="@string/ask_something"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/addQuestion_tv"
                    android:layout_marginStart="8dp"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:fontFamily="@font/muli_bold"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginBottom="20dp"
                    android:visibility="invisible"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/blockRpt_rv" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

    <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progressBar4"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>