<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".faq.FAQsActivity">

    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/ic_faqs_bg"
            android:id="@+id/background_image"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.0"
            android:contentDescription="@string/imagedescription"
            android:scaleType="fitXY"/>

    <TextView
            android:text="@string/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/back_tv"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/muli"
            android:textSize="15sp"
            android:textColor="@color/black"/>

    <TextView
            android:text="@string/search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/search_tv"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/muli"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:layout_marginEnd="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="20dp"/>

    <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/back_tv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="2dp"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintVertical_bias="1.0">

        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:text="@string/top_questions"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/muli_bold"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:layout_marginStart="20dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="20dp"
                    android:id="@+id/topQues_tv"
                    android:layout_marginEnd="20dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginRight="20dp"
                    android:textAllCaps="true"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="28dp"/>

            <android.support.v7.widget.RecyclerView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    app:layout_constraintTop_toBottomOf="@+id/topQues_tv"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="12dp"
                    android:layout_marginStart="12dp"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:clipToPadding="false"
                    android:id="@+id/topQues_rv"/>

            <View
                    android:layout_width="50dp"
                    android:layout_height="100dp"
                    android:background="@drawable/one_side_round"
                    android:layout_marginTop="30dp"
                    app:layout_constraintTop_toBottomOf="@+id/topQues_rv"
                    app:layout_constraintStart_toStartOf="parent"
                    android:id="@+id/ques_view"/>

            <TextView
                    android:text="@string/questions_and_response"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textAllCaps="true"
                    android:fontFamily="@font/muli_bold"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:layout_marginStart="20dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="20dp"
                    android:id="@+id/ques_tv"
                    android:layout_marginEnd="20dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginRight="20dp"
                    app:layout_constraintTop_toTopOf="@+id/ques_view"
                    app:layout_constraintBottom_toBottomOf="@+id/ques_view"/>

            <android.support.v7.widget.RecyclerView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/ques_tv"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginStart="12dp"
                    android:clipToPadding="false"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:id="@+id/questionRes_rv"/>

            <View
                    android:layout_width="50dp"
                    android:layout_height="100dp"
                    android:background="@drawable/one_side_round"
                    android:layout_marginTop="30dp"
                    app:layout_constraintTop_toBottomOf="@+id/questionRes_rv"
                    app:layout_constraintStart_toStartOf="parent"
                    android:id="@+id/frnd_view"/>

            <TextView
                    android:text="@string/friends_and_best_friends"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textAllCaps="true"
                    android:fontFamily="@font/muli_bold"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:layout_marginStart="20dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="20dp"
                    android:id="@+id/friends_tv"
                    android:layout_marginEnd="20dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginRight="20dp"
                    app:layout_constraintTop_toTopOf="@+id/frnd_view"
                    app:layout_constraintBottom_toBottomOf="@+id/frnd_view"
                    android:layout_marginBottom="8dp"/>

            <android.support.v7.widget.RecyclerView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/friends_tv"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginStart="12dp"
                    android:clipToPadding="false"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:id="@+id/frnBest_rv"/>

            <View
                    android:layout_width="50dp"
                    android:layout_height="100dp"
                    android:background="@drawable/one_side_round"
                    android:layout_marginTop="30dp"
                    app:layout_constraintTop_toBottomOf="@+id/frnBest_rv"
                    app:layout_constraintStart_toStartOf="parent"
                    android:id="@+id/block_view"/>

            <TextView
                    android:text="@string/block_and_report"
                    android:layout_width="0dp"
                    android:textAllCaps="true"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/muli_bold"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:layout_marginStart="20dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="20dp"
                    android:id="@+id/block_tv"
                    android:layout_marginEnd="20dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginRight="20dp"
                    app:layout_constraintTop_toTopOf="@+id/block_view"
                    app:layout_constraintBottom_toBottomOf="@+id/block_view"
                    android:layout_marginBottom="8dp"/>

            <android.support.v7.widget.RecyclerView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/block_tv"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginLeft="12dp"
                    android:layout_marginStart="12dp"
                    android:id="@+id/blockRpt_rv"
                    android:clipToPadding="false"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="15dp" app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="20dp">

            </android.support.v7.widget.RecyclerView>

        </android.support.constraint.ConstraintLayout>

    </android.support.v4.widget.NestedScrollView>

    <TextView
            android:text="@string/ask_something"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/addQuestion_tv"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:fontFamily="@font/muli_bold"
            android:layout_marginEnd="20dp"
            app:layout_constraintEnd_toStartOf="@+id/search_tv" android:layout_marginRight="20dp"
            android:layout_marginTop="15dp" app:layout_constraintTop_toTopOf="parent"/>

</android.support.constraint.ConstraintLayout>